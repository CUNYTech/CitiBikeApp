<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/dialog_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Set directions for"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/locationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Location Name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/travelModeText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:text="Travel Mode: "
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/travelMode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:text="... "
                android:textColor="@android:color/black"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">



            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:text="Distance: "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:text="0 Miles"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:text="Duration: "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/durationText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:text="0 Minutes"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/bg_screen1"
            android:text="Cancel"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/setDirectionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/bg_screen1"
            android:text="Directions"/>


    </LinearLayout>


</RelativeLayout>